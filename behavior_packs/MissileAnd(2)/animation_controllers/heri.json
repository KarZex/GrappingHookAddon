{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.glapp": {
      "states": {
        "default": {
          "transitions": [
            { "ride": "query.has_rider" }
          ]
        },
        "ride":{
          "transitions": [
            {
              "despawn": "!query.has_rider"
            }
          ]
        },
        "despawn": {
          "on_entry": [
            "/event entity @s despawn"
          ]
        }
      }
    }
  }
}